<%- include('header')  %>
<div class="container full-height-container d-flex align-items-center justify-content-center">
    <div class="row justify-content-center w-100">
        <div class="col-lg-6 col-md-8 col-sm-10" style="margin-top: 80px;">
            <% if(contato._id) { %>
                <form action="/contato/edit/<%= contato._id %>" method="post" class="p-4 border rounded shadow-sm">
            <% } else { %>
                <form action="/contato/register" method="post" class="p-4 border">
                <% } %>
                <div class="col-lg-10">
                    <%- include('messages') %> <!-- Centraliza as mensagens -->
                </div>
                <h1 class="text-center mb-4">Agenda de Contatos</h1>

                <div class="form-group mb-3">
                    <label for="nome">Nome</label>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input  value="<%= contato.nome %>" type="text" id="nome" name="nome" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label for="sobrenome">Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" type="text" id="sobrenome" name="sobrenome" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label for="email">E-mail</label>
                    <input value="<%= contato.email %>" type="email" id="email" name="email" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label for="telefone">Telefone</label>
                    <input value="<%= contato.telefone %>" type="tel" id="telefone" name="telefone" class="form-control">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
                </div>

            </form>
        </div>
    </div>
</div>
<%- include('footer')  %>
